import tkinter as tk
from tkinter import messagebox

root = tk.Tk()
root.title("Cm to Inch Calculator")
root.geometry("300x150")

def convert():
    cm = float(entry.get())
    inch = cm / 2.54
    messagebox.showinfo("Result: ", "{} cm = {:.2f} inches".format(cm, inch))

entry = tk.Entry(root, font=12)
entry.pack(pady=(20, 8), padx=20)

c_btn = tk.Button(root, text="Convert", command=convert)
c_btn.pack(pady=(0, 12))

root.bind("<Return>", convert)
root.mainloop()
